<div class='row valign-wrapper profile'>
  <div class="col l2 hide-on-small-only"></div>
  <div class="col  s12 l8">
    <div class="collection with-header">
      <li class="collection-header"><h4>Update Your Games List</h4></li>
    <% @games.each do |game| %>
      <li class="collection-item">
        <div id="gamename"><%= game.name %>
          <i class="btn-flat btn-small material-icons right" type="submit" href="/update_games">delete</i>
          <i class="btn-flat btn-small material-icons right" type="submit" href="/update_games">playlist_add</i>
        </div>
      </li>
    <% end %>
      <li class="collection-item"><a href="/profile" class="waves-effect waves-light btn blue">Back</a></li>
    </div>
  </div>
  <div class="col l2 hide-on-small-only"></div>
</div>

